{
  "name": "battle-engine",
  "version": "0.0.1",
  "description": "",
  "author": "Vitor Mascia",
  "private": true,
  "type": "module",
  "main": "./build/sandbox.js",
  "license": "UNLICENSED",
  "scripts": {
    "build": "npm run install-modules && npm run ts:compile && npm run lint:fix",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node ./build/main",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix && eslint --fix",
    "ts:compile": "rimraf build && tsc --pretty",
    "ts:compile-watch": "rimraf build && tsc --watch --pretty",
    "ts:check": "tsc --noEmit true --pretty",
    "test": "jest --detectOpenHandles --runInBand --logHeapUsage",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "install-modules": "npm ci",
    "reinstall-modules": "rimraf node_modules && npm ci",
    "check:dependencies": "npx depcheck",
    "typeorm": "tsx ./node_modules/typeorm/cli",
    "typeorm:run-migrations": "rimraf build && npm run build && npm run typeorm migration:run -- -d ./src/connections/typeorm.connection.ts",
    "typeorm:generate-migration": "rimraf build && npm run build && npm run typeorm -- -d ./src/connections/typeorm.connection.ts migration:generate ./src/migrations/${npm_config_name:-$(git branch --show-current)}",
    "typeorm:create-migration": "npm run typeorm -- migration:create ./src/migrations/$npm_config_name",
    "typeorm:revert-migration": "npm run typeorm -- -d ./src/connections/typeorm.connection.ts migration:revert",
    "typeorm:cache-clear": "npm run typeorm -- -d ./src/connections/typeorm.connection.ts cache:clear",
    "redis:cli": "docker exec -it redis_server redis-cli"
  },
  "dependencies": {
    "@fastify/helmet": "^13.0.1",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/bullmq": "^11.0.3",
    "@nestjs/common": "^11.1.5",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.5",
    "@nestjs/platform-fastify": "^11.1.5",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.10.0",
    "bignumber.js": "^9.3.1",
    "bullmq": "^5.56.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.0",
    "ioredis": "^5.6.1",
    "lodash": "^4.17.21",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.25",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.31.0",
    "@faker-js/faker": "^9.9.0",
    "@jest/types": "^30.0.1",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.5",
    "@stylistic/eslint-plugin": "^5.2.0",
    "@suites/unit": "^3.0.1",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.1",
    "@types/async": "^3.2.24",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.14",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "jest-mock": "^30.0.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  }
}
